---
import Header from "../components/layout/Header.astro";
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      ::-webkit-scrollbar {
        width: 12px;
      }

      ::-webkit-scrollbar-track {
        background: #1a1800;
        border-radius: 6px;
      }

      ::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, #fcaf17, #b41919);
        border-radius: 6px;
        border: 2px solid #1a1800;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(to bottom, #ffc107, #d32f2f);
      }

      * {
        scrollbar-width: thin;
        scrollbar-color: #fcaf17 #1a1800;
      }
    </style>
  </head>
  <body
    class="bg-fixed bg-center bg-repeat-x bg-[url('/images/gangtags.png')] bg-[#1a1800]"
  >
    <Header />
    <main class="w-full">
      <slot />
    </main>
  </body>
</html>
